{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Modestel",
  "version": "1.0.0",
  "identifier": "com.modestel.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Modestel",
        "width": 1536,
        "height": 864,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/backend"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFFOTA0NTMyMTU1MTQ2MEUKUldRT1JsRVZNa1dRSHJQQXdpelU1RzF3TCt0ZWRwSE1NMXg5emZHYllCRHdYMFB1QzQ1enR6bnoK",
      "endpoints": ["https://github.com/ZaidSunasra/Modestel/releases/tag/latest"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
